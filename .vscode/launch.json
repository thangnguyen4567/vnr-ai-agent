{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üîç Debug Streamlit",
      "type": "python",
      "request": "launch",
      "module": "streamlit",
      "args": [
        "run",
        "app.py", // üëâ ƒë·ªïi th√†nh t√™n file app c·ªßa b·∫°n
        "--server.runOnSave",
        "true"
      ],
      "env": {
        "PYTHONBREAKPOINT": "pdb.set_trace"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "üîç Debug API (uvicorn)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "src.api.app:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload"
      ],
      "env": {
        "PYTHONBREAKPOINT": "pdb.set_trace"
      },
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: Attach to Docker",
      "type": "python",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 1234
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app"
        }
      ],
      "justMyCode": false
    }
  ]
}